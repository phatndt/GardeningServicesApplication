<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lyparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/ly1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/lyparent">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:src="@drawable/ic_iconapp"
                app:layout_constraintTop_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/idwctlf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_horizontal"
                android:text="Welcome to Lafyuu"
                android:layout_below="@+id/imageView2"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idsitc"
                android:layout_margin="5dp"
                android:gravity="center_horizontal"
                android:text="Sign in to continue"
                android:textAlignment="center"
                android:textSize="12dp"
                android:layout_below="@+id/idwctlf"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ly2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ly1">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/idEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/Green1"
                app:hintTextColor="@color/Green1"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_email_24"
                    android:drawableLeft="@drawable/ic_baseline_email_24"
                    android:inputType="textEmailAddress"
                    android:drawablePadding="10dp"
                    android:hint="Your Email"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/idPassWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/idEmail"
                app:boxStrokeColor="@color/Green1"
                app:hintTextColor="@color/Green1"
                app:endIconMode="password_toggle"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edPassWord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_lock_24"
                    android:drawableLeft="@drawable/ic_baseline_lock_24"
                    android:drawablePadding="10dp"
                    android:hint="Password" />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/btSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/borderbtsi"
                android:text="Sign In"
                android:textColor="@color/white"
                android:layout_below="@id/idPassWord"
                 />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ly3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ly2"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OR"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:id="@+id/tvor">

            </TextView>
            <Button
                android:id="@+id/loginwithgmail"
                android:layout_width="match_parent"
                android:layout_below="@id/tvor"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/borderbtlgwg"
                android:text="Login with Google"
                android:drawableStart="@drawable/ic_google"
                android:drawableLeft="@drawable/ic_google"
                android:drawablePadding="10dp"
                android:textColor="@color/Gray3"
                android:textStyle="normal" />
            <Button
                android:id="@+id/loginwithfacebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_below="@id/loginwithgmail"
                android:text="Login with Facebook"
                android:drawableStart="@drawable/ic_facebook"
                android:drawableLeft="@drawable/ic_facebook"
                android:background="@drawable/borderbtlgwg"
                android:drawablePadding="10dp"
                android:textColor="@color/Gray3"
                android:textStyle="normal" />
                <TextView
                    android:id="@+id/fgpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Forgot Password ?"
                    android:textAlignment="center"
                    android:textColor="@color/Green1"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:layout_below="@id/loginwithfacebook"
                     />
            <LinearLayout
                android:id="@+id/idlly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_below="@+id/fgpassword"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:weightSum="1">
                <TextView
                    android:id="@+id/idquestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:text="Do you have a account? "
                    android:textColor="@color/Gray3"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:layout_weight="0"
                    />
                <TextView
                    android:id="@+id/tvregister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:textColor="@color/Green1"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:gravity="left"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>