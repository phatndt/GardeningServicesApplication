<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title_fragment_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/tv_title_good"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:text="@string/titleCart"
                app:fontFamily="@font/open_sans_bold"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"/>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_fragment_cart">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_list_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvC_list_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rvC_list_cart">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/edt_code_discount"
                        android:layout_width="300dp"
                        android:background="@drawable/corner_edt"
                        android:layout_height="40dp"
                        android:maxLines="1"
                        android:maxLength="20"
                        android:padding="5dp"
                        android:hint="Enter discount code"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="10dp"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/cart_apply_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Apply"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/Green1"
                        app:layout_constraintStart_toEndOf="@id/edt_code_discount"
                        app:layout_constraintTop_toTopOf="parent"/>
                </LinearLayout>
